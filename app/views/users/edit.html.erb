<div class="row black-glass">
	<div class="col s3 center">
		<%= image_tag 'avatars/av01', :class => 'circle responsive-img' %>
		<p><b><%= @user.username %></b></p>
	</div>
	<div class="col s6">
	<h2>Edit Profile</h2>
		<%= form_for @user, url: {action: 'update'} do |f| %>
			<%= f.text_field :first_name, :placeholder => "First Name" %>
			<% if @user.errors.full_messages_for(:first_name).first %>
				<div class="card card-panel red red-lighten-1">
					<% @user.errors.full_messages_for(:first_name).each do |error| %>
						<%= error %><br>
					<% end %>
				</div>
			<% end %>
			<%= f.text_field :last_name, :placeholder => "Last Name" %>
			<% if @user.errors.full_messages_for(:last_name).first %>
				<div class="card card-panel red red-lighten-1">
					<% @user.errors.full_messages_for(:last_name).each do |error| %>
						<%= error %><br>
					<% end %>
				</div>
			<% end %>
			<%= f.text_field :email, :placeholder => "Email" %>
			<% if @user.errors.full_messages_for(:email).first %>
				<div class="card card-panel red red-lighten-1">
					<% @user.errors.full_messages_for(:email).each do |error| %>
						<%= error %><br>
					<% end %>
				</div>
			<% end %>
			<%= f.text_field :username, :placeholder => "Username" %>
			<% if @user.errors.full_messages_for(:username).first %>
				<div class="card card-panel red red-lighten-1">
					<% @user.errors.full_messages_for(:username).each do |error| %>
						<%= error %><br>
					<% end %>
				</div>
			<% end %>
			<%= f.password_field :password, :placeholder => "Password" %>
			<% if @user.errors.full_messages_for(:password).first %>
				<div class="card card-panel red red-lighten-1">
					<% @user.errors.full_messages_for(:password).each do |error| %>
						<%= error %><br>
					<% end %>
				</div>
			<% end %>
			<%= f.submit "Save Changes", :class => "btn waves-effect deep-orange darken-4" %>
			<%= link_to "Cancel", @user, :class => "btn waves-effect deep-orange darken-4" %>
		<% end %>
	</div>
</div>