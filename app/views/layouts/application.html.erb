<!DOCTYPE html>
<html>
<head>
  <title>Project6</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<main>
		<div class="container">
			<div class="row">
				<div class="col s12">
					<div class="row">
						<div class="col s6 offset-s3 center-align">
							<% flash.each do |key, value| %>
								<% if key == "alert" %>
									<div class="card-panel red red-lighten-1"><%= value %></div>
								<% elsif key == "notice" %>
									<div class="card-panel blue blue-lighten-1"><%= value %></div>
								<% end %>
	      					<% end %>
						</div>
					</div>
					<div class="row">
						<%= yield %>
					</div>
				</div>
			</div>
		</div>
	</main>
	<%= render 'layouts/footer' %>
</body>
</html>
